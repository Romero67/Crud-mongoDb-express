<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="card card-body bg-dark p-4 text-white">
       <h1>Update a task</h1>
        <form action="/edit/{{task._id}}" method="POST">

          <div class="mb-4">
           <input
            type="text"
            name="title"
            placeholder="Title"
            value="{{task.title}}"
            class="form-control rounded-0 bg-dark text-white"
          />
          </div>

          <div class="mb-4">
           <textarea
            name="description"
            rows="3"
            placeholder="Add a descriptions"
            class="form-control rounded-0 bg-dark text-white"
          >{{task.description}}</textarea>
          </div>

          <button class="btn btn-primary">update</button>

        </form>
      </div>
    </div>
  </div>
</div>